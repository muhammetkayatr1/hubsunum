@model Video


<div class="col-lg-12 mb-20">
    <div class="videos__item row">
        <div class="videos__item__pic set-bg col-lg-4 video-size" data-setbg="/img/@Model.Image">
            <button type="button" class="video-btn play-btn" data-toggle="modal" data-src="https://www.youtube.com/embed/@Model.Url" data-target="#myModal">
                <i class="fa fa-play"></i>
            </button>
        </div>
        <div class="videos__item__text col-lg-8">
            <h5>@Model.Tittle</h5>
            <ul>
                <li>@Model.Date</li>
            </ul>
        </div>
    </div>
</div>