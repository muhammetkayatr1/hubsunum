<section class="hero set-bg" data-setbg="/img/makale.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero__text">
                    <div class="hero__search__form">
                        <form action="/NewsSearch">
                            <input style="float: none; border-top-left-radius: 10px; border-bottom-left-radius: 10px;" name="q" type="text" placeholder="Search...">
                            <button type="submit" style="border-top-right-radius: 10px; border-bottom-right-radius: 10px;"><i class="fas fa-search"></i></button>
                        </form>
                    </div>
                    <ul class="hero__categories__tags">
                        @await Component.InvokeAsync("NCategories")
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
